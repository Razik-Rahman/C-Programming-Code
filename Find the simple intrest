#include <stdio.h>
int main() 
{
    float a,r,t,si;
    printf("Enter the amount: ");
    scanf("%f", &a);
    printf("Enter the annual interest rate: ");
    scanf("%f", &r);
    printf("Enter the time: ");
    scanf("%f", &t);
    si=(a*r*t)/100;
    printf("The Simple interest is: %f\n",si);
    return 0;
}
